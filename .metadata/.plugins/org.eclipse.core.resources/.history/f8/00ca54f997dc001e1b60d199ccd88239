package com;

public class Tutorial5 {

	public static void happyNumber(int x) {
		
	double num = x;
	double number = 0;
	
	int c =0;
	while(num >0 || num  > 1) {
		
		double rem = num % 10;
		
		c++;
		
 number +=(int) Math.pow(rem,2);
 
 
 num/=10;
 
 if(c ==2) {
	 
	 num =number;
 }
 
	}
		
	
		System.out.println(number);
		
		
	}
	
	
	
	
	
	public static void main(String[] args) {
		
		happyNumber(13);

	}

}
