package com;

public class Tutorial5 {

	public void happyNumber(int x) {
		
		double num = x;
		double digit = 0;
		while(num >0) {
			
			double rem = num % 10;
			
			 digit = Math.pow(rem, 2);
			
			digit += digit;
			
			if(digit == 1) {
				
				System.out.println("it is the happy number");
			}
			
		}
	}
	
	
	public static void main(String[] args) {
		
		
	}

}
