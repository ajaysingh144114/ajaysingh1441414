package com;

public class Tutorial5 {

	public static boolean happyNumber(int x) {
		
		double num = x;
		double digit = 0;
		while(num >0) {
			
			double rem = num % 10;
			
			 digit = Math.pow(rem, 2);
			
			digit += digit;
			
			
		
		if (digit==1) {
			return true;
		}
		
		return false;
	}
	
	
	public static void main(String[] args) {
		
		happyNumber(13);
	}

}
